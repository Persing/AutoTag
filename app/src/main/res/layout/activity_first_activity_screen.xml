<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.jha.ayush.autotag.FirstActivityScreen"
    android:nestedScrollingEnabled="false">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">


        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="@string/extract_hashtags"
            android:id="@+id/extractButton"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="openGallery"
            />

        <SurfaceView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/surfaceView"
            android:layout_gravity="left|top" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_gravity="left|top"
            android:maxHeight="100dp"
            android:minHeight="100dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="Image used to generate tags" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TagOutPut"
            android:layout_gravity="left|top"
            android:textSize="12sp"
            android:textIsSelectable="true"
            android:shadowColor="#00ffffff"
            android:paddingLeft="100dp"
            android:background="#00000000"
            android:password="false"
            android:textColor="#e0ffffff"
            android:textStyle="normal"
            android:maxHeight="92dp" />


    </FrameLayout>

</FrameLayout>
